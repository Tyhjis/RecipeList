<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml" type="javafx.scene.layout.GridPane">
        <TextField GridPane.columnIndex="0" GridPane.rowIndex="0"
                   GridPane.columnSpan="2"
                   fx:id="categoryName" />

        <Button GridPane.columnIndex="0" GridPane.rowIndex="1"
                fx:id="categoryButton">Add</Button>

        <TextField GridPane.columnIndex="0" GridPane.rowIndex="2"
              GridPane.columnSpan="2" fx:id="selectedCategory" disable="true"/>

        <Button GridPane.columnIndex="0" GridPane.rowIndex="3"
                fx:id="deleteCategoryButton" disable="true">Delete</Button>

        <Button GridPane.columnIndex="1" GridPane.rowIndex="3"
                fx:id="updateCategoryButton" disable="true">Update</Button>

        <ListView GridPane.columnIndex="3" GridPane.rowIndex="0"
                  GridPane.columnSpan="2" GridPane.rowSpan="10"
                  fx:id="categoryListBox" />
</fx:root>
