<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="tyhjis.recipeplanner.categories.CategoryController"
            prefHeight="640.0" prefWidth="860.0">
        <TextField GridPane.columnIndex="0" GridPane.rowIndex="0"
                   GridPane.columnSpan="2"
                   fx:id="categoryName" />
        <Button GridPane.columnIndex="0" GridPane.rowIndex="1"
                GridPane.columnSpan="2"
                fx:id="categoryButton"
                onAction="#addCategory">Add</Button>
        <ListView GridPane.columnIndex="3" GridPane.rowIndex="0"
                  GridPane.columnSpan="2" GridPane.vgrow="ALWAYS"
                  fx:id="categoryListBox" />
</GridPane>
